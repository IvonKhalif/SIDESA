<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red_F44336</item>
    </style>

    <!--App Button-->
    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBorderless.Vanilla">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/margin_component</item>
        <item name="android:paddingEnd">@dimen/margin_component</item>
    </style>

    <style name="ButtonBorderless.Vanilla.StrokePrimary">
        <item name="android:background">@drawable/bg_button_white_stroke</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--TabLayout-->

    <style name="TabDefaultTextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--TYPOGRAPH-->
    <style name="Headline">
        <item name="android:fontFamily">@font/firasans_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SubHeadline">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/firasans_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldSubHeadline">
        <item name="android:fontFamily">@font/firasans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Label">
        <item name="android:fontFamily">@font/firasans_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fontColorPrimary</item>
    </style>

    <style name="Large">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontColorPrimary</item>
    </style>

    <style name="LargePassword">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/smoke_E0E0E0</item>
    </style>

    <style name="Medium">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Small">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fontColorPrimary</item>
    </style>

    <style name="Micro">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
</resources>