<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gov.sidesa">

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ContainerTracker"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.letter.input.LetterInputActivity"
            android:exported="true"
            android:theme="@style/Theme.ContainerTracker.NoActionBar"/>
        <activity
            android:name=".ui.profile.edit.EditProfileFamilyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.detail.DetailProfileFamilyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.edit.EditProfileKKActivity"
            android:exported="false" />
        <activity
            android:name=".ui.letterlist.LetterListActivity"
            android:exported="true"
            android:theme="@style/Theme.ContainerTracker.NoActionBar"/>
        <activity
            android:name=".ui.login.forgotpassword.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.profile.detail.DetailProfileKKActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.edit.EditProfileKTPActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.detail.DetailProfileKTPActivity"
            android:exported="false"
            android:theme="@style/Theme.ContainerTracker.NoActionBar" />
        <activity
            android:name=".ui.login.password.PasswordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.profile.detail.DetailProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ContainerTracker.NoActionBar" />
        <activity
            android:name=".ui.profile.edit.EditProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.ContainerTracker.NoActionBar" />
        <activity
            android:name=".ui.letterlist.LetterListActivity"
            android:exported="true"
            android:theme="@style/Theme.ContainerTracker.NoActionBar"/>
        <activity
            android:name=".ui.DashboardActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ContainerTracker.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>